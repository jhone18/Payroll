<div class="form-group">
    <div class="row">
        <div class="col-md-3">
            <label>Pay Code</label>
        </div>
        <div class="col-md-9">
            <select class="form-control" id="payCode"></select>
        </div>
        <div class="col-md-3">
            <label>Payroll Type</label>
        </div>
        <div class="col-md-9">
            <select class="form-control" id="payrollType"></select>
        </div>
        <div class="col-md-3">
            <label>Compute as Daily</label>
        </div>
        <div class="col-md-9">
            <select class="form-control">
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="row"></div>
        <div class="col-md-3">
            <label>Payment Type</label>
        </div>
        <div class="col-md-9">
            <select class="form-control">
                <option value="BANK">BANK</option>
                <option value="CASH">CASH</option>
                <option value="CHEQUE">CHEQUE</option>
            </select>
        </div>
        <div class="col-md-3">
            <label>Bank</label>
        </div>
        <div class="col-md-9">
            <select class="form-control" id="bank"></select>
        </div>
        <div class="col-md-3">
            <label>Branch</label>
        </div>
        <div class="col-md-9">
            <select class="form-control" id="bankBranch"></select>
        </div>
        <div class="col-md-3">
            <label>Bank Acct. No.</label>
        </div>
        <div class="col-md-9">
            <input type="text" class="form-control"/>
        </div>
        <div class="col-md-3">
            <label>Allow OT</label>
        </div>
        <div class="col-md-9">
            <select class="form-control">
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <label>Salary</label>
        </div>
        <div class="col-md-9">
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-3">
            <label>Daily Rate</label>
        </div>
        <div class="col-md-9">
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-3">
            <label>Hourly Rate</label>
        </div>
        <div class="col-md-9">
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-3">
            <label>Minute Rate</label>
        </div>
        <div class="col-md-9">
            <input type="text" class="form-control" />
        </div>
    </div>
</div>