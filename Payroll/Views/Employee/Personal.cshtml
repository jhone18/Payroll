<div class="form-group">
    <div class="col-md-3">
        <label>Employee No.</label>
    </div>
    <div class="col-md-7">
        <input type="text" class="form-control" id="employeeId" />
    </div>
    <div class="col-md-2" style="text-align:right">
        <div id="employmentEdit" onclick="ShowEmploymentSave();" style="cursor:pointer">
            <a class='item-action item-action-raised' title='Edit'>
                <span class="glyphicon glyphicon-pencil update" aria-hidden='true'></span>
            </a>
        </div>
        <div id="employmentSave" style="display:none;cursor:pointer">
            <a class='item-action item-action-raised' title='Save' onclick="update_Personal();">
                <span class="glyphicon glyphicon-save" aria-hidden='true'></span>
            </a>
            <a class='item-action item-action-raised' title='Cancel Changes'>
                <span class="glyphicon glyphicon-remove-sign" aria-hidden='true'></span>
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <label>Last Name</label>
    </div>
    <div class="col-md-7">
        <input type="text" class="form-control" id="lastName" />
    </div>
    <div class="col-md-3">
        <label>First Name</label>
    </div>
    <div class="col-md-7">
        <input type="text" class="form-control" id="firstName" />
    </div>
    <div class="col-md-3">
        <label>Middle Name</label>
    </div>
    <div class="col-md-7">
        <input type="text" class="form-control" id="middleName" />
    </div>
    <div class="col-md-3">
        <label>Gender</label>
    </div>
    <div class="col-md-7">
        <select class="form-control" id="gender">
            <option value="M">Male</option>
            <option value="F">Female</option>
        </select>
    </div>
    <div class="col-md-3">
        <label>Birth Date</label>
    </div>
    <div class="col-md-7">
        <div class="col-md-6 input-group date" id="birthDatePicker" style="padding-right:15px;">
            <input type="text" class="form-control" id="birthDate" />
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
            </span>
        </div>
    </div>
    <div class="col-md-3">
        <label>Adress</label>
    </div>
    <div class="col-md-7">
        <textarea class="form-control" id="address"></textarea>
    </div>
</div>