@{
    ViewData["Title"] = "Loan Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Loan Entry</h2>


<div class="row">
    <div class="col-md-3">
        <label>Employee</label>
        <select class="form-control" data-onload-select2>
            <option selected value="001">Rene Barnachea</option>
        </select>
    </div>
    <div class="col-md-3">
        <label>Filter By</label>
        <select class="form-control" data-onload-select2>
            <option value="Active">Active</option>
            <option value="Hold">Hold</option>
            <option value="Resigned">Resigned</option>
        </select>
    </div>
</div>
<div class="row">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="table-cell-id">Loan Code</th>
                    <th>Description</th>
                    <th>Loan Principal</th>
                    <th>Loan Amount</th>
                    <th class="text-right">Date Approved</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="table-cell-id">1</td>
                    <td>Loan 1</td>
                    <td>100000</td>
                    <td>10000</td>
                    <td class="text-right text-nowrap">
                        <small>06/09/2015 18:05</small>
                    </td>
                    <td class="table-cell-actions">
                        <a href="#" class="item-action" title="Edit">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a href="#" class="item-action item-action-danger" title="Delete">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
                <tr class="table-row-nested">
                    <td class="table-cell-id">1</td>
                    <td>Loan 2</td>
                    <td>200000</td>
                    <td>20000</td>
                    <td class="text-right text-nowrap">
                        <small>07/09/2015 10:05</small>
                    </td>
                    <td class="table-cell-actions">
                        <a href="#" class="item-action" title="Edit">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a href="#" class="item-action item-action-danger" title="Delete">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h5 class="modal-title">New Loan Entry</h5>
            </div>
            <div class="modal-body">
                @Html.Partial("Create")
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">New Loan</button>
</div>
