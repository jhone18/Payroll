
@{
    ViewData["Title"] = "Payroll Transactions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Payroll Transactions</h2>

<form class="form-inline">
    <div class="row">
        <div class="col-md-6">
            <label>Filter </label>
            <select class="form-control" data-onload-select2>
                <option selected value="Name">Name</option>
                <option value="EmpID">Employee Id</option>
                <option value="PayCode">PayCode</option>
                <option value="Department">Deparment</option>
            </select>
            <input type="text" class="form-control" placeholder="Search" />
            <input type="button" class="btn btn-link" value="Search" />
        </div>
        <div class="col-md-6">
            <label>Show Employee with Status </label>
            <select class="form-control" data-onload-select2>
                <option selected value="Active">Active</option>
                <option value="Hold">Hold Id</option>
                <option value="Resigned">Resigned</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="bs-component">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#timesheet" data-toggle="tab">TimeSheet</a></li>
                <li><a href="#income" data-toggle="tab">Income</a></li>
                <li><a href="#deduction" data-toggle="tab">Deduction</a></li>
            </ul>
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade active in" id="timesheet">
                    <div class="table-responsive table table-bordered">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="table-cell-id">Employee ID</th>
                                    <th>Last Name</th>
                                    <th>First Name</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="clickable-row">
                                    <td class="table-cell-id">ABC-001</td>
                                    <td>Barnachea</td>
                                    <td>Rene</td>
                                    <td class="table-cell-actions">
                                        <a href="#" class="item-action" title="Edit" data-toggle="modal" data-target="#myModal">
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </a>
                                        <a href="#" class="item-action item-action-danger" title="Delete">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        </a>
                                    </td>
                                </tr>
                                <tr class="table-row-nested clickable-row">
                                    <td class="table-cell-id">ABC-002</td>
                                    <td>Barnachea</td>
                                    <td>Remie</td>
                                    <td class="table-cell-actions">
                                        <a href="#" class="item-action" title="Edit" data-toggle="modal" data-target="#myModal">
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </a>
                                        <a href="#" class="item-action item-action-danger" title="Delete">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h5 class="modal-title">Update Payroll Entry</h5>
                                </div>
                                <div class="modal-body">
                                    @Html.Partial("Create")
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="income">
                    test
                </div>
                <div class="tab-pane fade" id="deduction">
                    test
                </div>
            </div>
        </div>
    </div>
</form>