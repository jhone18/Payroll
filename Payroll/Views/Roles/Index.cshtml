@model IEnumerable<Payroll.Models.Roles>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Roles</h2>

<div class="form-group row">
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th class="table-cell-id">Role Id</th>
                    <th>Short Description</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="clickable-row">
                        <td class="table-cell-id">@Html.DisplayFor(modelItem => item.RoleId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.ShortDesc)</td>
                        <td class="table-cell-actions">
                            <a href="#" onclick="return show_Role('@item.RoleId')" class="item-action item-action-raised" title="Edit">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                            <a href="#" class="item-action item-action-danger" title="Delete" data-toggle="modal" data-target="#@("deleteRoleModal"+item.RoleId)">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </a>
                            <div class="modal fade" id="@("deleteRoleModal"+item.RoleId)" role="dialog" aria-labelledby="roleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-sm" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="roleModalLabel">Confirm Delete</h4>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete: @item.RoleId?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger" id="deleteRole" onclick="return delete_Role('@item.RoleId');">Delete</button>
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#roleModal" onclick="clearTextBox_Roles();">New Role</button>
    </div>
    <div id="roleModal" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h5 class="modal-title">Update Role Entry</h5>
                </div>
                <div class="modal-body">
                    @*@Html.Partial("Details", Model, new ViewDataDictionary(ViewData) { { "userId", "admin" } });*@
                    <div class="row">
                        <div class="col-md-3">
                            <label>Role Id</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="roleId" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <label>Short Description</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="roleShortDescription" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <label>Description</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="roleDescription" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="addRole" onclick="return add_Role();">Add</button>
                    <button type="button" class="btn btn-primary" id="updateRole" style="display:none;" onclick="update_Role();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
