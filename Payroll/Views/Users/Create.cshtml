<div class="row">
    <div class="bs-component">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#general" data-toggle="tab">General</a></li>
            <li><a href="#roles" data-toggle="tab">Roles</a></li>
        </ul>
        <div id="myTabContent" class="tab-content">
            <div class="tab-pane fade active in" id="general">
                <div class="form-group row">
                    <div class="col-md-3">
                        <label>User Id</label>
                    </div>
                    <div class="col-md-7">
                        <input type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label>First Name</label>
                    </div>
                    <div class="col-md-7">
                        <input type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label>Last Name</label>
                    </div>
                    <div class="col-md-7">
                        <input type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label>Password</label>
                    </div>
                    <div class="col-md-7">
                        <input type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label>Date Activated</label>
                    </div>
                    <div class="col-md-7">
                        <input type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label>Status</label>
                    </div>
                    <div class="col-md-7">
                        <select class="form-control">
                            <option selected>ACTIVE</option>
                            <option>INACTIVE</option>
                            <option>LOCKED</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="roles">
                <div class="row">
                    <div class="col-md-12">
                        <label>Roles are used to grant access to modules. Select which role this user belong. You can select only 1 role.</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <label>Role</label>
                    </div>
                    <div class="col-md-7">
                        <select class="form-control">
                            <option>PROCESSOR</option>
                            <option>ADMIN</option>
                        </select>
                    </div>
                    <div class="col-md-1">
                        <button class="btn btn-default">Select</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

